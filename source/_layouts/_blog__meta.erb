
<aside class="blog__meta">
	<div class="blog__meta__recent-articles">
		<h2>Recent Articles</h2>

		<ol>
			<% blog.articles[0...5].each do |article| %>
				<li><%= link_to article.title, article %> (<%= format_time("%B #{article.date.day.ordinalize}", article.date)%>)</li>
			<% end %>
		</ol>
	</div>

	<div class="blog__meta__tags">
		<h2>Tags</h2>

		<ol>
			<% blog.tags.each do |tag, articles| %>
				<li><%= link_to tag, tag_path(tag) %> (<%= articles.size.to_s %>)</li>
			<% end %>
		</ol>
	</div>

	<div class="blog__meta__archive">
		<h2>By Year</h2>
		<ol>
			<% blog.articles.group_by {|a| a.date.year}.each do |year, articles| %>
				<li><%= link_to year, blog_year_path(year) %> (<%= articles.size.to_s %>)</li>
			<% end %>
		</ol>
	</div>
</aside>
